<div class="page-header"><h1>Add new Kurry</h1></div>

<%= form_for @franchise do |f| %>
  <%= render 'shared/errors', object: @franchise %>

  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Amount %>
    <%= f.text_field :amount, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :Number_of_people %>
    <%= f.text_field :person %>
  </div>

  <div class="form-group">
    <%= f.label :Starting_date %>
    <%= f.date_field :date %>
  </div>
<div>
  <%= f.submit 'CREATE!', class: 'btn btn-primary btn-lg' %>
  <%= link_to 'Back', {:action => "index", :controller => "franchises"}, class: 'btn btn-default btn-sm'%>
  </div>
<% end %>